<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:animateLayoutChanges="true">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
      android:layout_width="match_parent"
      android:background="?attr/accentColor"
      android:layout_height="1dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_margin="8dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        tools:ignore="ContentDescription"/>

      <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/app_name"/>

      <TextView
        android:id="@+id/version"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        tools:text="Version: "/>

      <View
        android:layout_width="match_parent"
        android:background="?attr/accentColor"
        android:layout_height="1dp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:layout_marginEnd="8dp"
          android:src="@drawable/email"
          tools:ignore="ContentDescription"/>

        <LinearLayout
          android:id="@+id/contact"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:orientation="vertical"
          android:background="?android:attr/selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textStyle="bold"
            android:textSize="16sp"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:layout_marginTop="2dp"/>
        </LinearLayout>

      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:background="?attr/accentColor"
        android:layout_height="1dp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:layout_marginEnd="8dp"
          android:src="@drawable/telegram"
          tools:ignore="ContentDescription"/>

        <LinearLayout
          android:id="@+id/telegram"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:orientation="vertical"
          android:background="?android:attr/selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telegram_group"
            android:textStyle="bold"
            android:textSize="16sp"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telegram_link"
            android:layout_marginTop="2dp"/>
        </LinearLayout>

      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:background="?attr/accentColor"
        android:layout_height="1dp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:layout_marginEnd="8dp"
          android:src="@drawable/github_mark"
          tools:ignore="ContentDescription"/>

        <LinearLayout
          android:id="@+id/source_code"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:orientation="vertical"
          android:background="?android:attr/selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/source"
            android:textStyle="bold"
            android:textSize="16sp"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/source_url"
            android:layout_marginTop="2dp"/>
        </LinearLayout>
      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:background="?attr/accentColor"
        android:layout_height="1dp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:layout_marginEnd="8dp"
          android:src="@drawable/issues"
          tools:ignore="ContentDescription"/>

        <LinearLayout
          android:id="@+id/issues"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:orientation="vertical"
          android:background="?android:attr/selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_issues"
            android:textStyle="bold"
            android:textSize="16sp"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_issues_summary"
            android:layout_marginTop="2dp"/>
        </LinearLayout>
      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:background="?attr/accentColor"
        android:layout_height="1dp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:layout_marginEnd="8dp"
          android:src="@drawable/log"
          tools:ignore="ContentDescription"/>

        <LinearLayout
          android:id="@+id/logging"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:orientation="vertical"
          android:background="?android:attr/selectableItemBackground">

          <TextView
            android:id="@+id/logging_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/collect_logs"
            android:textStyle="bold"
            android:textSize="16sp"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/collect_logs_summary"
            android:layout_marginTop="2dp"/>
        </LinearLayout>
      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:background="?attr/accentColor"
        android:layout_height="1dp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:layout_marginEnd="8dp"
          android:src="@drawable/star"
          tools:ignore="ContentDescription"/>

        <LinearLayout
          android:id="@+id/rating"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:orientation="vertical"
          android:background="?android:attr/selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_rating"
            android:textStyle="bold"
            android:textSize="16sp"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_rating_summary"
            android:layout_marginTop="2dp"/>
        </LinearLayout>
      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:background="?attr/accentColor"
        android:layout_height="1dp"/>

      <LinearLayout
        android:id="@+id/paid_features_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:src="@drawable/paid"
            tools:ignore="ContentDescription"/>

          <LinearLayout
            android:id="@+id/paid_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/paid_features"
              android:textStyle="bold"
              android:textSize="16sp"/>

            <TextView
              android:id="@+id/paid_features_summary"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:ellipsize="end"
              android:layout_marginTop="2dp"/>

            <LinearLayout
              android:id="@+id/paid_features_detail"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:orientation="vertical">

              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/bullet"
                android:text="@string/paid_feature1"
                android:drawablePadding="4dp"
                android:layout_marginTop="2dp"/>

              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/bullet"
                android:text="@string/paid_feature2"
                android:drawablePadding="4dp"
                android:layout_marginTop="2dp"/>

              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/bullet"
                android:text="@string/paid_feature3"
                android:drawablePadding="4dp"
                android:layout_marginTop="2dp"/>

              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/bullet"
                android:text="@string/paid_feature4"
                android:drawablePadding="4dp"
                android:layout_marginTop="2dp"/>

            </LinearLayout>
          </LinearLayout>
        </LinearLayout>

        <View
          android:layout_width="match_parent"
          android:background="?attr/accentColor"
          android:layout_height="1dp"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:layout_marginEnd="8dp"
          android:src="@drawable/update"
          tools:ignore="ContentDescription"/>

        <LinearLayout
          android:id="@+id/check_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:orientation="vertical"
          android:background="?android:attr/selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:textStyle="bold"
            android:textSize="16sp"/>

          <TextView
            android:id="@+id/check_update_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_summary"
            android:layout_marginTop="2dp"/>
        </LinearLayout>
      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:background="?attr/accentColor"
        android:layout_height="1dp"/>

    </LinearLayout>
  </LinearLayout>

</ScrollView>
