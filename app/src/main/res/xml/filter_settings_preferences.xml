<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory android:title="@string/pref_filter_packages_title">

    <CheckBoxPreference
      android:defaultValue="@bool/pref_filter_exclude_no_icon_apps_default"
      android:key="@string/pref_filter_exclude_no_icon_apps_key"
      android:title="@string/pref_filter_exclude_no_icon_apps_title"/>

    <CheckBoxPreference
      android:defaultValue="@bool/pref_filter_exclude_user_apps_default"
      android:key="@string/pref_filter_exclude_user_apps_key"
      android:title="@string/pref_filter_exclude_user_apps_title"/>

    <CheckBoxPreference
      android:defaultValue="@bool/pref_filter_exclude_system_apps_default"
      android:key="@string/pref_filter_exclude_system_apps_key"
      android:title="@string/pref_filter_exclude_system_apps_title"/>

    <CheckBoxPreference
      android:defaultValue="@bool/pref_filter_exclude_framework_apps_default"
