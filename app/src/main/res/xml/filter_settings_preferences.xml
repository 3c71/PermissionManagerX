    <CheckBoxPreference
      android:defaultValue="@bool/pref_filter_exclude_no_perms_apps_default"
      android:key="@string/pref_filter_exclude_no_perms_apps_key"
      android:title="@string/pref_filter_exclude_no_perms_apps_title"/>

    <MultiSelectListPreference
      android:key="@string/pref_filter_excluded_apps_key"
      android:title="@string/pref_filter_excluded_apps_title"/>

  </PreferenceCategory>

  <PreferenceCategory android:title="@string/pref_filter_permissions_title">
    <CheckBoxPreference
      android:defaultValue="@bool/pref_filter_exclude_not_changeable_perms_default"
      android:key="@string/pref_filter_exclude_not_changeable_perms_key"
